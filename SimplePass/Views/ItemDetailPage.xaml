<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimplePass.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="10" 
                 Orientation="Vertical"
                 Padding="5">
        
        <Label Text="{Binding Text}" FontSize="Medium"/>
        
        <Label Text="{Binding Description}" FontSize="Medium"/>
      
        <Label Text="{Binding Username}" FontSize="Medium"/>
     
        <Label Text="{Binding UrlAddress}" FontSize="Medium"/>
    </StackLayout>
    
</ContentPage>